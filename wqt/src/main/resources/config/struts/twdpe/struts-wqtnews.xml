<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">
<struts>
	<package name="struts-wqtnews"   extends="twdpe-common-default">
	    <global-allowed-methods>regex:.*</global-allowed-methods> 
	    <action name="newsList" class="com.wqt.news.action.WqtNewsAction" method="NewsList">
	    	<result name="success" type="json">
				  <param name="root">data</param>
				  <param name="excludeNullProperties">true</param>
			 </result>
			
	    </action>
		
		<action name="newsOne" class="com.wqt.news.action.WqtNewsAction" method="NewsOne">
			<result name="success" type="json">
				  <param name="root">data</param>
				  <param name="excludeNullProperties">true</param>
			 </result>
		</action>

		<action name="wqtNewsList" class="com.wqt.news.action.WqtNewsAction" method="wqtNewsList">
			<result name="success" type="freemarker">
				/news/news.ftl
			</result>
			 <result name="404" type="redirect">
			    /404.html
		    </result>
			 <interceptor-ref name="workerServiceInterceptor" />  <!-- 应用自定义拦截器 -->
		</action>
		
		<action name="wqtNewsInfo" class="com.wqt.news.action.WqtNewsAction" method="wqtNewsInfo">
			<result name="success" type="freemarker">
				/news/news_detail.ftl
			</result>
			 <result name="404" type="redirect">
			    /404.html
		    </result>
			<interceptor-ref name="workerServiceInterceptor" />  <!-- 应用自定义拦截器 -->
		</action>
		
		<action name="commitNewsComment" class="com.wqt.news.action.WqtNewsAction" method="saveNewsComment">
			 <result name="success" type="json">
				<param name="root">data</param>
				<param name="excludeNullProperties">true</param>
		    </result>
		</action>
		
	</package>
</struts>
